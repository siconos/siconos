<!-- SICONOS Model XML file -->

<SiconosModel>
	<Title>Dry Friction Oscillator</Title>
  <Author>F.Perignon</Author>
  <Description>Oscillator with Coulomb friction </Description>
  <Date>date</Date>
	<Time>
		<t0>0.0</t0>
		<T>100.0</T>
	</Time>
	<NSDS bvp='false'>
	
		<!-- DSs defined in the problem -->
		<DS_Definition>		
			<LagrangianDS number='1' Id="Oscillator">
				<StepsInMemory>1</StepsInMemory>				
				<q0 vectorSize='3'>
					0.1 0.0 0.0
				</q0>
				<Velocity0  vectorSize='3'>
					0.0 0.0 0.0
				</Velocity0>
				<FExt vectorPlugin="ballsPlugin:FExt"/>
				<Mass matrixPlugin="ballsPlugin:Mass"/>
				<FInt vectorPlugin="ballsPlugin:FInt"/>
				<JacobianQFInt matrixPlugin="ballsPlugin:jacobianQFInt"/>
				<JacobianVelocityFInt matrixPlugin="ballsPlugin:jacobianVelocityFInt"/>
				<NNL vectorPlugin="ballsPlugin:NNL"/>
				<JacobianQNNL matrixPlugin="ballsPlugin:jacobianQNNL"/>
				<JacobianVelocityNNL matrixPlugin="ballsPlugin:jacobianVelocityNNL"/>
			</LagrangianDS>
		</DS_Definition>
		<!-- Interactions defined in the problem -->		
		<Interaction_Definition>
			<Interaction number='1'>
				<size>3</size>
				<!-- List of couple of DS concerned by this interaction -->
		                <DS_Concerned all='true'>
                                </DS_Concerned>									
				<!-- Relation of this interaction -->				
				<Interaction_Content>		
				 <LagrangianLinearRelation>
				  <H matrixRowSize='3' matrixColSize='3'>
  	                            <row> 0.0 0.0 1.0 </row>
  	                            <row> 1.0 0.0 0.0 </row>
  	                            <row> 0.0 1.0 0.0 </row>
                                  </H>
  				 </LagrangianLinearRelation>			
				<!-- NS Law of this interaction	-->
				<NewtonImpactFrictionLaw>
  				  <en>0.0</en>				
                                  <mu>0.08</mu>
				  <size>3</size>
				</NewtonImpactFrictionLaw>
				</Interaction_Content>	
			</Interaction>				
		</Interaction_Definition>		
	</NSDS>
	<!-- Simulation to use in order to solve the problem -->	
	<Simulation type='TimeStepping'>
		<TimeDiscretisation isConstant='true'>	
			<h>0.005</h>
     		</TimeDiscretisation>				
		<!-- One Step Integrators -->				
		<OneStepIntegrator_Definition>
			<Moreau>
				<DS_Concerned vectorSize='1'>1</DS_Concerned>		
				<Theta vectorSize='1'> 0.5</Theta>
			</Moreau>					
		</OneStepIntegrator_Definition>
		<!-- One Step NS Problem of th Simulation-->
		<OneStepNSProblem>
		 	<FrictionContact3D>
                        <Solver type="NLGS" maxIter="101" tolerance="0.0001" directionSearch="0.6"/>
		 	</FrictionContact3D>
	        </OneStepNSProblem>
	</Simulation>	
</SiconosModel>
