<!-- SICONOS Model XML file -->

<SiconosModel>
	<Title>Dry Friction Oscillator</Title>
	<Author>F.Perignon</Author>
	<Description>Oscillator with Coulomb friction </Description>
	<Date>date</Date>
	<Time>
		<t0>0.0</t0>
		<T>100.0</T>
	</Time>
	<NSDS bvp='false'>

		<!-- DSs defined in the problem -->
		<DS_Definition>
			<LagrangianLinearTIDS Name='Oscillator'>
				<q0 vectorSize='2'>
					0.1 0.0
				</q0>
				<Velocity0  vectorSize='2'>
					0.0 0.0
				</Velocity0>
				<FExt vectorPlugin="OsciPlugin:FExt"/>
				<Mass matrixRowSize='2' matrixColSize='2'>
					<row>1.0 0.0 </row>
					<row>0.0 1.0 </row>
				</Mass>
				<K matrixRowSize='2' matrixColSize='2'>
					<row>1.0 0.0</row>
					<row>0.0 0.0</row>
				</K>
			</LagrangianLinearTIDS>
		</DS_Definition>
		<!-- Interactions defined in the problem -->
		<Interaction_Definition>
			<Interaction Name='1'>
				<!-- List of couple of DS concerned by this interaction -->
				<DS_Concerned>Oscillator</DS_Concerned>
				<!-- Relation of this interaction -->
				<Interaction_Content>
					<LagrangianLinearTIR>
						<C matrixRowSize='2' matrixColSize='2'>
							<row> 0.0 1.0 </row>
							<row> 1.0 0.0 </row>
						</C>
					</LagrangianLinearTIR>
					<!-- NS Law of this interaction	-->
					<NewtonImpactFrictionNSL size='2'>
						<en>0.0</en>
						<mu>0.08</mu>
					</NewtonImpactFrictionNSL>
				</Interaction_Content>
			</Interaction>
		</Interaction_Definition>
	</NSDS>
	<!-- Simulation to use in order to solve the problem -->
	<Simulation type='TimeStepping'>
		<TimeDiscretisation>
			<h>0.005</h>
		</TimeDiscretisation>
		<!-- One Step Integrators -->
		<OneStepIntegrator_Definition>
			<MoreauJeanOSI>
				<DS_Concerned>Oscillator</DS_Concerned>
				<Theta all="0.5"></Theta>
			</MoreauJeanOSI>
		</OneStepIntegrator_Definition>
		<!-- One Step NS Problem of th Simulation-->
		<OneStepNSProblems_List>
			<FrictionContact Type="2">
				<NonSmoothSolver Name="F2D_NSGS">
					<iparam  vectorSize='5'>101 0 0 0 0</iparam>
					<dparam  vectorSize='5'>1e-5 0 0 0 0</dparam>
				</NonSmoothSolver>
			</FrictionContact>
		</OneStepNSProblems_List>
	</Simulation>
</SiconosModel>
