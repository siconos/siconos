SICONOSPATH=@prefix@
CXX=@CXX@
CXXFLAGS=@CXXFLAGS@
CXX_DYNLIB=@CXX_DYNLIB@



SAMPLE_SOURCES = $(OBJ)
SAMPLE_OBJ  = $(patsubst %.cpp,%.o,  $(SAMPLE_SOURCES))
SAMPLE_EXE  = $(patsubst %.cpp,%.out,  $(SAMPLE_SOURCES))
C_SOURCES = $(wildcard *.c)
C_OBJ  = $(patsubst %.c,%.o,  $(C_SOURCES))

sample:$(SAMPLE_OBJ) $(SAMPLE_EXE)

.cpp.o:
	$(CXX) -c $(CXXFLAGS) -fPIC @SICONOS_EXT_INCLUDES@ @ATLAS_LOCAL_INCLUDES@ -I$(SICONOSPATH)/include/Siconos/Kernel -I$(SICONOSPATH)/include/Siconos/Numerics $<

$(SAMPLE_EXE):$(SAMPLE_OBJ)
	$(CXX) $(CXXFLAGS) -o $@ $< @ATLAS_LDFLAGS@ -L@prefix@/lib  -lSiconosKernel  @SICONOS_EXT_LIBS@ 

run:$(SAMPLE_EXE) 
	./$(SAMPLE_EXE) 

PLUGIN_SOURCES = $(wildcard *Plugin.cpp)
PLUGIN_OBJ  = $(patsubst %.cpp,%.o,  $(PLUGIN_SOURCES))
PLUGIN_LIB = $(patsubst %.cpp,%.so,  $(PLUGIN_SOURCES))

plugin:$(PLUGIN_OBJ) $(PLUGIN_LIB)

.c.o:
	$(CC) -c $(CXXFLAGS)-fPIC  $<

%.so:%.cpp $(C_OBJ)
	$(CXX) $(CXX_DYNLIB) $(C_OBJ) $< -o $@

clean:	
	rm -f *.out *.o *.output *.so;

