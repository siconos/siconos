#define _XOPEN_SOURCE 700
#include <stdio.h>                                 // for printf
#include <string.h>                                // for strcmp
#include "frictionContact_test_utils.h"            // for build_test_collection
#include "test_utils.h"                            // for data_collection
#include "SiconosConfig.h" // for SICONOS_HAS_MPI // IWYU pragma: keep

#define @PROBLEM_COLLECTION@ 1

#ifdef SICONOS_HAS_MPI
#include "mpi.h"
#endif

int main (int argc, char *argv[])
{
  const char ** _data_collection = data_collection();
  int n_data = 0;

#ifdef SICONOS_HAS_MPI
  MPI_Init(&argc, &argv);
#endif

  while (strcmp(_data_collection[n_data], "---") !=0)
    {
      n_data++;
    }
  printf("number of data = %i\n", n_data);

  int number_of_tests;
  TestCase * collection = build_test_collection(n_data, _data_collection, &number_of_tests);


#if defined(TEST_FIRST_ORDER_COLLECTION)
  collection[8].will_fail = 1; /* RFC3D_NSGS ProjectionOnCone, on ./data/rfc3d_sphere_from_grfc3d_dense.dat */
  collection[9].will_fail = 1; /* RFC3D_NSGS ProjectionOnCone, on ./data/rfc3d_sphere_from_grfc3d.dat */
#endif


  printf("%i tests for %i data files.\n", number_of_tests, n_data);

  int out = run_test_collection(collection, number_of_tests, rollingFrictionContact_test_function);
  //int out = 0;

  free_test_collection(collection, number_of_tests);




  
#ifdef SICONOS_HAS_MPI
  MPI_Finalize();
#endif



  
  return out;
}
