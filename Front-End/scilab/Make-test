SICONOSPATH=/usr/local/
NUMERICSPATH=/usr/local

ifndef SCIDIR
  SCIDIR=/usr/lib/scilab-3.0
endif

include $(SICONOSPATH)/share/siconos-kernel/KernelConfig.sh

INC_PATH=$(SICONOSPATH)/include
CFLAGS=-g -fbounds-check -w -Wno-deprecated -fPIC -DLA_COMPLEX_SUPPORT -DWITHOUT_NANA -I$(INC_PATH) -I$(SICONOSSPATH)/include -I/usr/local//include/lapackpp/ `xml2-config --cflags`
DYNFLAGS=-shared

all: sictest

sictest:sictest.c
	gcc -g -c $(CFLAGS) sictest.c
	gcc -g sictest.o -o sictest $(SICONOS_LIBS) $(LIBEXT_LDFLAGS)

clean:
	rm sictest sictest.o

