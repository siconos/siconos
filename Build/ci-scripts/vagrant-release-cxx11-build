#!/bin/sh

WORK_DIR=$1

rm -rf $WORK_DIR/install-dir
rm -rf $WORK_DIR/build-dir

mkdir -p $WORK_DIR/build-dir

cd $WORK_DIR/build-dir

cmake $2/Build -DON_DASHBOARD=1 -DMODE=Continuous -DDEV_MODE -DWITH_IO=1 -DWITH_GENERATION=0 -DWITH_MECHANICS=1 -DWITH_EXAMPLES=1 -DWITH_FRONTEND=1 -DCMAKE_INSTALL_PREFIX=$WORK_DIR/install-dir -DSOURCE_DIR=$2 -DINSTALL_COMMAND="make;-ik;install" -DWITH_CONTROL=1 -DFROM_REPO=0 -DCTEST_OPTIONS='-j2;-V' -DBUILD_TYPE=Release -DBUILDNAME_OPTIONS="vagrant" -Dproject_CMAKE_ARGS="WITH_DOXYGEN_WARNINGS=0"
